<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

  <display-name>bibliotecaWebClientWS</display-name>

  <servlet>
    <servlet-name>ConsultarMateriales</servlet-name>
    <servlet-class>servlets.ConsultarMateriales</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ConsultarMateriales</servlet-name>
    <url-pattern>/consultarMateriales</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ConsultarUsuarios</servlet-name>
    <servlet-class>servlets.ConsultarUsuarios</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ConsultarUsuarios</servlet-name>
    <url-pattern>/consultar-usuarios</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AgregarMaterial</servlet-name>
    <servlet-class>servlets.AgregarMaterial</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AgregarMaterial</servlet-name>
    <url-pattern>/agregarMaterial</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AgregarPrestamo</servlet-name>
    <servlet-class>servlets.AgregarPrestamo</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AgregarPrestamo</servlet-name>
    <url-pattern>/agregarPrestamo</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListarPrestamos</servlet-name>
    <servlet-class>servlets.ListarPrestamos</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ListarPrestamos</servlet-name>
    <url-pattern>/listarPrestamos</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MisPrestamosServlet</servlet-name>
    <servlet-class>servlets.MisPrestamosServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MisPrestamosServlet</servlet-name>
    <url-pattern>/misPrestamos</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HistorialPrestamosBibliotecario</servlet-name>
    <servlet-class>servlets.HistorialPrestamosBibliotecario</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HistorialPrestamosBibliotecario</servlet-name>
    <url-pattern>/historialPrestamosBibliotecario</url-pattern>
  </servlet-mapping>

  <!-- Filtro administrativo para todas las pÃ¡ginas protegidas -->
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>filters.AdminFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/consultar-usuarios</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/agregarMaterial</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/listarPrestamos</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/historialPrestamosBibliotecario</url-pattern>
  </filter-mapping>

</web-app>